<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--实下滑线样式-->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray5</item>
        <item name="colorPrimaryDark">@color/gray5</item>
        <!-- 设置activity切换动画 -->
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.DarkAppbar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.LightAppbar">
        <item name="colorPrimary">@color/gray5</item>
        <item name="colorPrimaryDark">@color/gray5</item>
        <item name="actionMenuTextColor">@color/gray15</item>
        <item name="overlapAnchor">false</item>
        <item name="titleTextColor">@color/black2</item>
        <item name="android:textColorPrimary">@color/black2</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--自定义CheckBox样式-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!--全屏样式-->
    <style name="AppTheme.FullScreen">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowFullscreen">true</item>
    </style>



    <!--选项条目样式-->
    <style name="OptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OptionMenuStyle" parent="android:Widget.Material.TextView">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">@drawable/bg_menu</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--设置动画效果-->
    <style name="BottomDialogAnimationStyle">
        <item name="android:windowEnterAnimation">@animator/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@animator/photo_dialog_out_anim</item>
    </style>
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <!-- 自定义进度条 -->
    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">100dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <declare-styleable name="ShadowLayout">
        <!--阴影的圆角大小-->
        <attr format="dimension" name="hl_cornerRadius"/>
        <!--阴影的扩散范围(也可以理解为扩散程度)-->
        <attr format="dimension" name="hl_shadowLimit"/>
        <attr format="color" name="hl_shadowColor"/>
        <attr format="color" name="hl_shadowBackColor"/>
        <attr format="color" name="hl_shadowBackColorClicked"/>
        <!--x轴的偏移量-->
        <attr format="dimension" name="hl_dx"/>
        <!--y轴的偏移量-->
        <attr format="dimension" name="hl_dy"/>
        <!--左边是否显示阴影-->
        <attr format="boolean" name="hl_leftShow"/>
        <!--右边是否显示阴影-->
        <attr format="boolean" name="hl_rightShow"/>
        <!--上边是否显示阴影-->
        <attr format="boolean" name="hl_topShow"/>
        <!--下面是否显示阴影-->
        <attr format="boolean" name="hl_bottomShow"/>


    </declare-styleable>
</resources>