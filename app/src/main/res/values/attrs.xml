<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BubbleImageView">
        <attr name="bubble_arrowTop" format="dimension|reference" />
        <attr name="bubble_arrowWidth" format="dimension|reference" />
        <attr name="bubble_arrowHeight" format="dimension|reference" />
        <attr name="bubble_arrowOffset" format="dimension|reference" />
        <attr name="bubble_angle" format="dimension|reference" />
        <attr name="bubble_arrowLocation" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="bubble_showText" format="boolean" />
        <attr name="bubble_showShadow" format="boolean" />
        <attr name="bubble_showArrow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="VideoView">
        <attr name="looping" format="boolean"/>
        <attr name="enableAudioFocus" format="boolean"/>
        <attr name="enableMediaCodec" format="boolean"/>
        <attr name="usingSurfaceView" format="boolean"/>
        <attr name="enableParallelPlay" format="boolean"/>

        <attr name="screenScaleType" format="dimension">
            <enum name="type_default" value="0"/>
            <enum name="type_16_9" value="1"/>
            <enum name="type_4_3" value="2"/>
            <enum name="type_match_parent" value="3"/>
            <enum name="type_original" value="4"/>
            <enum name="type_center_crop" value="5"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="OptionItemView">
        <attr name="title" format="string" />
        <attr name="title_size" format="dimension" />
        <attr name="title_color" format="color" />
        <attr name="badge_count" format="integer" />
        <attr name="start_src" format="reference|color" />
        <attr name="end_src" format="reference|color" />
        <attr name="desc" format="string" />
        <attr name="desc_size" format="dimension" />
        <attr name="desc_color" format="color" />
        <attr name="show_arrow_indicator" format="boolean" />
        <attr name="divider_align_to_title" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PopLayout">
        <attr name="radiusSize" format="dimension" />
        <attr name="bulgeSize" format="dimension" />
        <attr name="offsetSize" format="dimension" />
        <attr name="siteMode" format="enum">
            <enum name="top" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>
</resources>