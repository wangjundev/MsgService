<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/channel_search_chatbot_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_item"
    android:layout_marginTop="20dp">
    <!--头像-->
    <ImageView
        android:id="@+id/portraitImageView"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/portraitImageView"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="央视频"
                android:textColor="@color/black1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/certification_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/chatbot_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:maxLines="2"
            android:textSize="15sp"
            android:text="强大电视直播工具 全面汇聚央视、卫视频道,您的专属掌上电视 全面聚合高…"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/chatbot_organize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="16dp"
            android:textSize="12sp"
            android:text="中央广播电视总台"/>
    </LinearLayout>
    <View
        style="@style/Line"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>