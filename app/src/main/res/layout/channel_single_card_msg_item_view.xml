<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/channel_singlecard_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="17sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="习近平“七一”重要讲话中的党史｜土地革命战争篇"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <ImageView
            android:id="@+id/channel_singlecard_image"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/channel_singlecard_playImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="41dp"
            android:src="@mipmap/img_video_play_session"
            android:visibility="gone" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/channel_singlecard_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:layout_below="@id/channel_singlecard_image"
            />
        <ImageView
            android:id="@+id/channel_fav_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/channel_singlecard_image"
            android:layout_alignBaseline="@id/channel_singlecard_suggestion"
            android:paddingTop="15dp"
            android:paddingBottom="22dp"
            android:paddingRight="12dp"
            android:src="@mipmap/channel_add_to_fav_msg"/>
    </RelativeLayout>
</LinearLayout>