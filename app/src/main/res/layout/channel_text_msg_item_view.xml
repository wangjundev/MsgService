<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/channelContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="phone|email|map|web"
        android:linksClickable="true"
        android:maxHeight="88dp"
        android:paddingLeft="12dp"
        android:paddingRight="37dp"
        android:textColorLink="#3655bf"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/channel_fav_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/channelContentTextView"
        android:paddingTop="15dp"
        android:paddingBottom="22dp"
        android:paddingRight="24dp"
        android:src="@mipmap/add_to_fav_msg"/>
</RelativeLayout>